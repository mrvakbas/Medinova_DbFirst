
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/Templates/Admin/light/favicon.ico">
    <title>Tiny Dashboard - A Bootstrap Dashboard Template</title>
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="/Templates/Admin/light/css/simplebar.css">
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="/Templates/Admin/light/css/feather.css">
    <!-- Date Range Picker CSS -->
    <link rel="stylesheet" href="/Templates/Admin/light/css/daterangepicker.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="/Templates/Admin/light/css/app-light.css" id="lightTheme">
    <link rel="stylesheet" href="/Templates/Admin/light/css/app-dark.css" id="darkTheme" disabled>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .nav-item.active {
            background-color: rgba(0, 123, 255, 0.1);
            border-radius: 8px;
        }

            .nav-item.active .nav-link {
                color: #007bff !important;
                font-weight: bold;
            }

            .nav-item.active i {
                color: #007bff !important;
            }

        .sidebar {
            width: 260px;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
        }

        .brand-logo i {
            font-size: 1.6rem;
        }

        .sidebar .nav-link {
            color: #495057;
            font-weight: 500;
            border-radius: 0.5rem;
            transition: 0.2s ease-in-out;
        }

            .sidebar .nav-link:hover {
                background: #f1f3f5;
                color: #212529;
            }

            .sidebar .nav-link.active {
                background: #e7f1ff;
                color: #0d6efd;
                box-shadow: none;
            }

            .sidebar .nav-link i {
                width: 24px;
                text-align: center;
            }
    </style>
</head>
<body class="vertical  light  ">
    <div class="wrapper">

        <nav class="topnav navbar navbar-light">
            <button type="button" class="navbar-toggler text-muted mt-2 p-0 mr-3 collapseSidebar">
                <i class="fe fe-menu navbar-toggler-icon"></i>
            </button>
            <form class="form-inline mr-auto searchform text-muted">
                <input class="form-control mr-sm-2 bg-transparent border-0 pl-4 text-muted" type="search" placeholder="Aranacak kelime ..." aria-label="Search">
            </form>
            <ul class="nav">

                <li class="nav-item">
                    <a class="nav-link text-muted my-2" href="./#" data-toggle="modal" data-target=".modal-shortcut">
                        <span class="fe fe-grid fe-16"></span>
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-muted pr-0" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="avatar avatar-sm mt-2">
                            <img src="https://avatars.githubusercontent.com/u/89710884?v=4" alt="..." class="avatar-img rounded-circle">
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Profil</a>
                        <a class="dropdown-item" href="/Account/Logout/">Çıkış Yap</a>
                    </div>
                </li>
            </ul>
        </nav>

        <aside class="sidebar-left border-right bg-white shadow" id="leftSidebar" data-simplebar>
            <a href="#" class="btn collapseSidebar toggle-btn d-lg-none text-muted ml-2 mt-3" data-toggle="toggle">
                <i class="fe fe-x"><span class="sr-only"></span></i>
            </a>
            <nav class="sidebar bg-white border-end shadow-sm">
                <div class="sidebar-header text-center py-4">
                    <a href="/Admin/Dashboard/Index" class="d-block text-decoration-none">
                        <span class="brand-logo"><i class="fe fe-heart fe-24 text-primary"></i></span>
                        <span class="brand-text fw-bold text-dark ms-2">MEDINOVA</span>
                    </a>
                </div>

                <ul class="navbar-nav flex-column w-100 px-2">

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")"
                           href="/Admin/Dashboard/Index">
                            <i class="fe fe-home fe-18 me-2"></i>
                            <span class="item-text">Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Log" ? "active" : "")"
                           href="/Admin/Log/Index">
                            <i class="fe fe-activity fe-18 me-2"></i>
                            <span class="item-text">Sistem Logları</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Contacts" ? "active" : "")"
                           href="/Admin/Contacts/Index">
                            <i class="fe fe-mail fe-18 me-2"></i>
                            <span class="item-text">Mesajlar</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Appointments" ? "active" : "")"
                           href="/Admin/Appointments/Index">
                            <i class="fe fe-calendar fe-18 me-2"></i>
                            <span class="item-text">Randevular</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Testimonial" ? "active" : "")"
                           href="/Admin/Testimonial/Index">
                            <i class="fe fe-message-square fe-18 me-2"></i>
                            <span class="item-text">Referanslar</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Department" ? "active" : "")"
                           href="/Admin/Department/Index">
                            <i class="fe fe-briefcase fe-18 me-2"></i>
                            <span class="item-text">Bölümler</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Feature" ? "active" : "")"
                           href="/Admin/Feature/Index">
                            <i class="fe fe-star fe-18 me-2"></i>
                            <span class="item-text">Hizmetlerimiz</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Doctors" ? "active" : "")"
                           href="/Admin/Doctors/Index">
                            <i class="fe fe-user fe-18 me-2"></i>
                            <span class="item-text">Doktorlar</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")"
                           href="/Admin/User/Index">
                            <i class="fe fe-users fe-18 me-2"></i>
                            <span class="item-text">Kullanıcılar</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Role" ? "active" : "")"
                           href="/Admin/Role/Index">
                            <i class="fe fe-lock fe-18 me-2"></i>
                            <span class="item-text">Roller</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "Packages" ? "active" : "")"
                           href="/Admin/Packages/Index">
                            <i class="fe fe-package fe-18 me-2"></i>
                            <span class="item-text">Paketlerimiz</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "About" ? "active" : "")"
                           href="/Admin/About/Index">
                            <i class="fe fe-info fe-18 me-2"></i>
                            <span class="item-text">Hakkımızda</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2 @(ViewContext.RouteData.Values["Controller"].ToString() == "AboutItems" ? "active" : "")"
                           href="/Admin/AboutItems/Index">
                            <i class="fe fe-list fe-18 me-2"></i>
                            <span class="item-text">Hakkımızda Seçenekleri</span>
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center justify-content-start px-3 py-2" href="/Account/Logout/">
                            <i class="fe fe-calendar fe-18 me-2"></i>
                            <span class="item-text">Çıkış Yap</span>
                        </a>
                    </li>

                </ul>
            </nav>

        </aside>

        <main role="main" class="main-content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="row align-items-center mb-2">
                            @RenderBody()

                        </div>

                    </div> <!-- /.col -->
                </div> <!-- .row -->
            </div> <!-- .container-fluid -->
            <div class="modal fade modal-notif modal-slide" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="defaultModalLabel">Notifications</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="list-group list-group-flush my-n3">
                                <div class="list-group-item bg-transparent">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <span class="fe fe-box fe-24"></span>
                                        </div>
                                        <div class="col">
                                            <small><strong>Package has uploaded successfull</strong></small>
                                            <div class="my-0 text-muted small">Package is zipped and uploaded</div>
                                            <small class="badge badge-pill badge-light text-muted">1m ago</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group-item bg-transparent">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <span class="fe fe-download fe-24"></span>
                                        </div>
                                        <div class="col">
                                            <small><strong>Widgets are updated successfull</strong></small>
                                            <div class="my-0 text-muted small">Just create new layout Index, form, table</div>
                                            <small class="badge badge-pill badge-light text-muted">2m ago</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="list-group-item bg-transparent">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <span class="fe fe-inbox fe-24"></span>
                                        </div>
                                        <div class="col">
                                            <small><strong>Notifications have been sent</strong></small>
                                            <div class="my-0 text-muted small">Fusce dapibus, tellus ac cursus commodo</div>
                                            <small class="badge badge-pill badge-light text-muted">30m ago</small>
                                        </div>
                                    </div> <!-- / .row -->
                                </div>
                                <div class="list-group-item bg-transparent">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <span class="fe fe-link fe-24"></span>
                                        </div>
                                        <div class="col">
                                            <small><strong>Link was attached to menu</strong></small>
                                            <div class="my-0 text-muted small">New layout has been attached to the menu</div>
                                            <small class="badge badge-pill badge-light text-muted">1h ago</small>
                                        </div>
                                    </div>
                                </div> <!-- / .row -->
                            </div> <!-- / .list-group -->
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal">Clear All</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade modal-shortcut modal-slide" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="defaultModalLabel">Shortcuts</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body px-5">
                            <div class="row align-items-center">
                                <div class="col-6 text-center">
                                    <div class="squircle bg-success justify-content-center">
                                        <i class="fe fe-cpu fe-32 align-self-center text-white"></i>
                                    </div>
                                    <p>Control area</p>
                                </div>
                                <div class="col-6 text-center">
                                    <div class="squircle bg-primary justify-content-center">
                                        <i class="fe fe-activity fe-32 align-self-center text-white"></i>
                                    </div>
                                    <p>Activity</p>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-6 text-center">
                                    <div class="squircle bg-primary justify-content-center">
                                        <i class="fe fe-droplet fe-32 align-self-center text-white"></i>
                                    </div>
                                    <p>Droplet</p>
                                </div>
                                <div class="col-6 text-center">
                                    <div class="squircle bg-primary justify-content-center">
                                        <i class="fe fe-upload-cloud fe-32 align-self-center text-white"></i>
                                    </div>
                                    <p>Upload</p>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-6 text-center">
                                    <div class="squircle bg-primary justify-content-center">
                                        <i class="fe fe-users fe-32 align-self-center text-white"></i>
                                    </div>
                                    <p>Users</p>
                                </div>
                                <div class="col-6 text-center">
                                    <div class="squircle bg-primary justify-content-center">
                                        <i class="fe fe-settings fe-32 align-self-center text-white"></i>
                                    </div>
                                    <p>Settings</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main> <!-- main -->
    </div> <!-- .wrapper -->
