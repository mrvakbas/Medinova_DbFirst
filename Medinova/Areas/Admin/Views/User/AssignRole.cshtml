
@{
    ViewBag.Title = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Medinova.Areas.Admin.Data.UserRoleViewModel.AssignRoleViewModel

<h3>@Model.FullName İçin Rol Yönetimi</h3>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.UserId)

    <div class="card p-3">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check border-bottom mb-2 pb-2">
                @* C# kodları ile HTML etiketlerinin ayrımına dikkat edin *@
                @Html.HiddenFor(m => Model.Roles[i].RoleId)
                @Html.CheckBoxFor(m => Model.Roles[i].IsSelected, new { @class = "form-check-input" })
                @Html.LabelFor(m => Model.Roles[i].IsSelected, Model.Roles[i].RoleName, new { @class = "form-check-label ms-2" })
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success mt-3">Değişiklikleri Kaydet</button>
}