@model List<Role>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Roller</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Role Adı</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.RoleName</td>
        </tr>
    }
</table>
