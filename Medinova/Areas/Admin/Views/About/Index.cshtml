@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Hakkımızda</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Başlık</th>
        <th>Açıklama</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px; object-fit:cover;" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
        </tr>
    }
</table>
